@model IEnumerable<NgoMinhHung_2280601103.Models.Product>
@{
    ViewData["Title"] = "Product Management";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Product Management</h2>
<p>
    <a asp-area="Admin" asp-action="Add" class="btn btn-primary">Add New Product</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Description</th>
            <th>Category</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>@product.Description</td>
                <td>@product.Category?.Name</td>
                <td>
                    @if (!string.IsNullOrEmpty(product.ImageUrl))
                    {
                        <img src="@product.ImageUrl" alt="@product.Name" style="max-width: 100px;" />
                    }
                </td>
                <td>
                    <a asp-area="Admin" asp-action="Details" asp-route-id="@product.Id" class="btn btn-info">Details</a>
                    <a asp-area="Admin" asp-action="Edit" asp-route-id="@product.Id" class="btn btn-warning">Edit</a>
                    <a asp-area="Admin" asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>