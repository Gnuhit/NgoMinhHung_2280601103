@model NgoMinhHung_2280601103.Models.Product
@{
    ViewData["Title"] = "Product Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<div>
    <p><strong>Price:</strong> @Model.Price</p>
    <p><strong>Description:</strong> @Model.Description</p>
    <p><strong>Category:</strong> @Model.Category?.Name</p>
    <img src="@Model.ImageUrl" alt="@Model.Name" style="max-width: 300px;" />
    @if (Model.Images != null && Model.Images.Any())
    {
        <h4>Additional Images</h4>
        foreach (var image in Model.Images)
        {
            <img src="@image.Url" alt="Additional Image" style="max-width: 200px;" />
        }
    }
</div>
<a asp-action="Index" class="btn btn-secondary">Back to List</a>